{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "strict": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": false
    },
    "include": ["src"]
}
